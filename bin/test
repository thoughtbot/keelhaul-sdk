#!/usr/bin/env bash

set -o pipefail

xcode-select -print-path

portcheck=$(lsof -i \:1234)

if [[ $? != 0 ]]; then
  ruby ./fake_server.rb &
elif [[ $portcheck ]]; then
  echo "Server is already running..."
fi

xcodebuild -project Keelhaul.xcodeproj -scheme CommonCrypto-iOS -destination 'platform=iOS Simulator,name=iPhone 6'
xcodebuild -project Keelhaul.xcodeproj -scheme CommonCrypto-OSX -sdk macosx

xcodebuild test -project Keelhaul.xcodeproj -scheme Keelhaul-iOS -destination 'platform=iOS Simulator,name=iPhone 6' | xcpretty -t -c
xcodebuild test -project Keelhaul.xcodeproj -scheme Keelhaul-OSX -sdk macosx BUILD_ACTIVE_ARCH=NO | xcpretty -t -c
